<div class="chrono-container">
    <p id="chrono-display">00:00:00</p>
    <div class="chrono-buttons">
        <button id="start-btn">Start</button>
        <button id="stop-btn">Stop</button>
        <button id="reset-btn">Reset</button>
    </div>
</div>

<style>
    .chrono-container {
        text-align: center;
        margin-top: 2rem;
    }

    #chrono-display {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: var(--text-color);
    }

    .chrono-buttons button {
        background-color: var(--bg-color);
        border-radius: 1rem;
        margin: 0.5rem;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        color: var(--text-color);
        cursor: pointer;
    }

    #start-btn {
        border: 2px solid var(--pad5);
    }

    #stop-btn {
        border: 2px solid var(--pad2);
    }

    #reset-btn {
        border: 2px solid var(--pad6);
    }
</style>

<script>
    let timer: number | null = null;
    let elapsedTime = 0;
    let isRunning = false;

    function formatTime(time: number) {
        const hours = Math.floor(time / 3600).toString().padStart(2, "0");
        const minutes = Math.floor((time % 3600) / 60).toString().padStart(2, "0");
        const seconds = (time % 60).toString().padStart(2, "0");
        return `${hours}:${minutes}:${seconds}`;
    }

    function startTimer() {
        if (!isRunning) {
            isRunning = true;
            timer = setInterval(() => {
                elapsedTime++;
                updateDisplay();
            }, 1000);
        }
    }

    function stopTimer() {
        if (isRunning) {
            isRunning = false;
            clearInterval(timer!);
        }
    }

    function resetTimer() {
        stopTimer();
        elapsedTime = 0;
        updateDisplay();
    }

    function updateDisplay() {
        const display = document.getElementById("chrono-display");
        if (display) {
            display.textContent = formatTime(elapsedTime);
        }
    }

    document.addEventListener("DOMContentLoaded", () => {
        updateDisplay();
    });
    
    document.addEventListener("DOMContentLoaded", function () {
        const startBtn = document.getElementById("start-btn");
        const stopBtn = document.getElementById("stop-btn");
        const resetBtn = document.getElementById("reset-btn");

        startBtn.addEventListener("click", startTimer);
        stopBtn.addEventListener("click", stopTimer);
        resetBtn.addEventListener("click", resetTimer);
    });
</script>
