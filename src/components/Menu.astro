---
const pages = [
    { name: "Accueil", path: "/leotilus-soundboard/" },
    { name: "Jules Verne", path: "/leotilus-soundboard/jules_verne" },
    { name: "Georges Méliès", path: "/leotilus-soundboard/georges_melies" },
    { name: "Mami Wata", path: "/leotilus-soundboard/mami_wata" },
    { name: "Ollivander", path: "/leotilus-soundboard/ollivander" },
];

const currentPath = Astro.url.pathname;

const currentPage = pages.find(page => currentPath === page.path) || pages.find(page => currentPath.startsWith(page.path)) || pages[0];

const otherPages = pages.filter(page => page.path !== currentPage.path);
---

<div class="dropdown">
    <button class="dropbtn" id="dropdown-btn">{currentPage.name} ⏷</button>
    <div class="dropdown-content" id="dropdown-menu">
        {otherPages.map((page) => (
            <a href={page.path}>{page.name}</a>
        ))}
    </div>
</div>

<style>
    .dropdown {
        position: absolute;
        top: 0;
        margin-top: 5rem;
        width: 100vw;
        display: flex;
        justify-content: center;
    }

    .dropbtn {
        background-color: var(--bg-color);
        color: var(--text-color);
        padding: 0.5rem 1rem;
        font-size: 1.5rem;
        border: none;
        cursor: pointer;
        border: 2px solid var(--text-color);
        border-radius: 1rem;
    }

    .dropbtn:hover, .dropbtn:focus{
        background-color: var(--secondary-color);
        color: var(--primary-color);
    }

    .dropdown-content {
        display: none;
        position: absolute;
        margin-top: 3.5rem;
        background-color: var(--secondary-color);
        min-width: 160px;
        box-shadow: var(--shadow);
        border-radius: 1rem;
        z-index: 10;
    }

    .dropdown-content a {
        color: black;
        padding: 0.75rem 1rem;
        text-decoration: none;
        display: block;
    }

    .dropdown-content a:hover {
        border-radius: 1rem;
        color: var(--text-color);
        background-color: var(--secondary-color);
    }

    .show {
        display: block;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dropdownBtn = document.getElementById("dropdown-btn");
        const dropdownMenu = document.getElementById("dropdown-menu");

        dropdownBtn.addEventListener("click", function (event) {
            event.stopPropagation();
            dropdownMenu.classList.toggle("show");
        });

        window.addEventListener("click", function (event) {
            if (!dropdownMenu.contains(event.target) && !dropdownBtn.contains(event.target)) {
                dropdownMenu.classList.remove("show");
            }
        });
    });
</script>
